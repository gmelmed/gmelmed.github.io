{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Stock prices of 5 Tech Companies over Time.",
    "data": {
      "url": "https://raw.githubusercontent.com/gmelmed/gmelmed.github.io/refs/heads/main/data/cofer_clean.csv"
    },
    "title":{
      "text": "The dollar is dominant in FX reserves but its lead is starting to slip",
      "subtitle" :["Currency share of allocated foreign currency reserves (%) | Source: IMF",""],
      "anchor": "start"
    },
    "transform": [{"filter": "datum.share != 0"}],  
    "mark": "line",
    "encoding": {
      "x": {"field": "date", "type": "temporal"},
      "y": {
        "field": "share", 
        "type": "quantitative",
        "scale": {"domain": [0, 100]}
      },
      "color": {"field": "series", "type": "nominal"}
    },
    "config": {
      "font": "Montserrat, sans-serif",
      "view": {
        "stroke": "transparent"
      },
      "background": "#f7f7f7",
      "range": {
        "category": [
          "#EE1C25",
          "#0A3161"
        ]
      },
      "point": {"filled": true, "size": 80, "color": "#002fa7", "opacity": 0.95},
      "axis": {
        "labelColor": "#676A86",
        "labelFontSize": 11,
        "labelFont": "Montserrat, sans-serif",
        "labelOpacity": 0.7,
        "tickColor": "#676A86",
        "tickOpacity": 0.5,
        "domainColor": "#676A86",
        "domainOpacity": 0.5,
        "gridColor": "#676A86",
        "gridDash": [2, 2],
        "gridOpacity": 0.5,
        "title": null,
        "titleColor": "#676A86",
        "titleOpacity": 0.8,
        "tickSize": 4
      },
      "axisXDiscrete": {
        "grid": false,
        "labelAngle": 0,
        "tickCount": 10,
        "tickOpacity": 0.5,
        "title": null
      },
      "axisYDiscrete": {
        "ticks": false,
        "labelPadding": 5
      },
      "axisXQuantitative": {
        "grid": false
      },
      "axisXTemporal": {
        "grid": false
      },
      "axisYQuantitative": {
        "gridColor": "#676A86",
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "tickCount": 8,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      },
      "legend": {
        "titleFont": "Montserrat, sans-serif",
        "titleFontSize": 14,
        "titleColor": "#1a1a1a",
        "title": null,
        "labelColor": "#1a1a1a",
        "labelFontSize": 12,
        "orient": "top-left"
      },
      "title": {
        "font": "Montserrat, sans-serif",
        "fontSize": 16,
        "color": "#1a1a1a",
        "subtitleFontSize": 14,
        "subtitleColor": "#676A86"
      }
    },
    "height": 400,
    "width": 600
  }