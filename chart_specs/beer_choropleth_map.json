{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "The price of a pint",
    "anchor": "start",
    "subtitleFontWeight": "lighter",
    "subtitle": ["The median price of 'LAGER - PINT 3.4-4.2%'", "Data: ONS", ""]
  },
  "width": 400,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/misc/bigdata/beer_prices_by_region.csv"
  },
  "params": [
    {
      "name": "year",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2024,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/EconomicsObservatory/courses/main/datasets/advanced/nuts1.json",
          "format": {"type": "json", "property": "features"}
        },
        "key": "properties.id",
        "fields": ["type", "properties", "geometry"]
      }
    },
    {"filter": "datum.year == year"}
  ],
  "encoding": {
    "color": {
      "field": "price",
      "type": "quantitative",
      "legend": {
        "title": null,
        "labelFontWeight": "lighter",
        "labelExpr": "'£'+datum.label",
        "orient": "none",
        "legendX": 0,
        "legendY": -10,
        "direction": "horizontal",
        "gradientLength": 200
      },
      "scale":{
        "scheme":"lightmulti"
      }  
    },
    "tooltip":[
      {
        "field":"properties.NAME_LATN",
        "title":"Region"
      },
      {
        "field":"price",
        "title":"Price (£)",
        "format":".2f"
      }
    ]
  },
  "projection": {"type": "naturalEarth1"},
  "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.3},
  "config": {
      "font": "Montserrat, sans-serif",
      "view": {
        "stroke": "transparent"
      },
      "background": "#f7f7f7",
      "legend": {
        "titleFont": "Montserrat, sans-serif",
        "titleFontSize": 14,
        "titleColor": "#122b39",
        "title": null,
        "labelColor": "#122b39",
        "labelFontSize": 12
      },
      "title": {
        "font": "Montserrat-Bold, sans-serif",
        "color":"#122b39",
        "fontSize": 16,
        "subtitleFontSize": 14,
        "subtitleColor": "#676A86"
      }
    },
}