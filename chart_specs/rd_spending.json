{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/gmelmed/gmelmed.github.io/refs/heads/main/data/rd_spending.csv"
    },
    "transform": [
      {"filter": "toDate(datum.date) >= toDate('1990-01-01')"},
      {"filter": "datum.value !=0"}
    ],
    "encoding": {
      "x": {"field": "date", "type": "temporal", "title": null},
      "y": {
        "field": "value",
        "type": "quantitative",
        "title": "R&D spending, % of GDP",
        "axis":{
          "format":"%"
        }
      },
      "color": {
        "condition": {
          "param": "hover",
          "field": "country",
          "type": "nominal",
          "legend": null
        },
        "value": "grey"
      },
      "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2},
      "tooltip": [
        {
          "field": "country",
          "type": "nominal",
          "title": "Countries"
        },
        {
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "title": "Month"
        },
        {
          "field": "value",
          "type": "quantitative",
          "format": ".2%",
          "title": "R&D spending (% of GDP)"
        }
      ]
    },
    "layer": [
      {
        "description": "transparent layer to make it easier to trigger selection",
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["country"],
              "on": "pointerover"
            },
            "value": [{"country": "United Kingdom"}]
          }
        ],
        "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
      },
      {"mark": "line"},
      {
        "transform": [
          {
            "window": [{"op": "rank", "as": "rank"}],
            "sort": [{"field": "date", "order": "descending"}],
            "groupby": ["country"]
          },
          {"filter": "datum.rank == 1"}
        ],
        "layer": [
          {"mark": {"type": "circle"}},
          {
            "mark": {"type": "text", "align": "left", "dx": 4},
            "encoding": {"text": {"field": "country", "type": "nominal"}}
          }
        ]
      }
    ],
    "height": 400,
    "width": 600,
    "title": {
      "text": "G7 R&D spending",
      "anchor": "start",
      "subtitle": ["Data from World Bank", ""]
    },
    "config": {
      "font": "Montserrat, sans-serif",
      "view": {"stroke": "transparent"},
      "background": "#f7f7f7",
      "range": {
        "category": [
          "#FFD300",
          "#00C5CD",
          "#00FF7F",
          "#5D00A6",
          "#FF2B7F",
          "#002fa7"

        ]
      },
      "point": {"filled": true, "size": 80, "color": "#e6224b", "opacity": 0.95},
      "axis": {
        "labelColor": "#676A86",
        "labelFontSize": 11,
        "labelFont": "Montserrat, sans-serif",
        "labelOpacity": 0.7,
        "tickColor": "#676A86",
        "tickOpacity": 0.5,
        "domainColor": "#676A86",
        "domainOpacity": 0.5,
        "gridColor": "#676A86",
        "gridDash": [2, 2],
        "gridOpacity": 0.5,
        "title": null,
        "titleColor": "#676A86",
        "titleOpacity": 0.8,
        "tickSize": 4
      },
      "axisXTemporal": {"grid": false},
      "axisYQuantitative": {
        "gridColor": "#676A86",
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "tickCount": 8,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      },
      "legend": {
        "titleFont": "Montserrat, sans-serif",
        "titleFontSize": 14,
        "titleColor": "#1a1a1a",
        "title": null,
        "labelColor": "#1a1a1a",
        "labelFontSize": 12
      },
      "title": {
        "font": "Montserrat, sans-serif",
        "fontSize": 16,
        "color": "#1a1a1a",
        "subtitleFontSize": 14,
        "subtitleColor": "#676A86"
      }
    }
  }