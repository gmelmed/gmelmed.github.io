{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/gmelmed/gmelmed.github.io/refs/heads/main/data/us_states_topo.json",
      "format": {
        "type": "topojson",
        "feature": "geog"
      }
    },
    "title": {
      "text": "US States",
      "subtitle": ["Hover to see state names.",""]
    },
    "mark": {
      "type": "geoshape",
      "stroke": "black",
      "strokeWidth": 0.5,
      "fill": "lightgray"
    },
    "encoding": {
      "tooltip": {
        "field": "properties.name",
        "type": "nominal"
      }
    },
    "projection": {
      "type": "albersUsa"
    },
    "config": {
      "font": "Montserrat, sans-serif",
      "text": {
        "color": "#676A86",
        "align": "left",
        "baseline": "middle",
        "dx": 7,
        "dy": 0,
        "fontSize": 11
      },
      "view": {
        "stroke": null,
        "continuousWidth": 600,
        "continuousHeight": 300,
        "discreteWidth": 600,
        "discreteHeight": 300
      },
      "background": "#f7f7f7",
      "title": {
        "color": "#122b39E6",
        "subtitleColor": "#676A86",
        "font": "Montserrat, sans-serif",
        "subtitleFont": "Montserrat, sans-serif",
        "anchor": "start",
        "fontSize": 16,
        "subtitleFontSize": 14,
        "subtitlePadding": 4,
        "offset": 0,
        "frame": "group"
      },
      "legend": {
        "orient": "top",
        "title": null,
        "labelFontSize": 12,
        "offset": 0,
        "padding": 4
      }
    }
  }