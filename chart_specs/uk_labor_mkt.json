{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Anscombe's Quartet",
    "data": {"url": "https://raw.githubusercontent.com/gmelmed/gmelmed.github.io/refs/heads/main/data/ons_labor_data.csv"},
    "transform": [{"filter": "toDate(datum.date) >= toDate('2015-01-01')"}],
    "columns": 3,
    "facet": {
      "field": "series",
      "type":"ordinal",
      "sort": {"op": "min", "field": "date"},
      "title": null
    },
    "spec": {
      "width": 200,
      "height": 150,
      "mark": {
        "type": "line",
        "color":"#002fa7"},
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "scale": {"type": "linear", "zero":false},
          "title":null
        },
        "tooltip":[
          {
            "field":"date",
            "type": "temporal",
            "title":"Date",
            "format":"%b %Y"
          },
          {
            "field":"value",
            "type": "quantitative",
            "title":"Value",
            "format":".1f"
          }
        ]
      }
    },
    "resolve": {
      "scale": {
        "y": "independent"
      }
    },
    "title":{
      "text":"The UK labor market in 9 time series",
      "subtitle":["Data: ONS",""]
    },
    "config": {
      "font": "Montserrat, sans-serif",
      "view": {"stroke": "transparent"},
      "background": "#f7f7f7",
      "axis": {
        "labelColor": "#676A86",
        "labelFontSize": 11,
        "labelFont": "Montserrat, sans-serif",
        "labelOpacity": 0.7,
        "tickColor": "#676A86",
        "tickOpacity": 0.5,
        "domainColor": "#676A86",
        "domainOpacity": 0.5,
        "gridColor": "#676A86",
        "gridDash": [2, 2],
        "gridOpacity": 0.5,
        "title": null,
        "titleColor": "#676A86",
        "titleOpacity": 0.8,
        "tickSize": 4
      },
      "axisXTemporal": {"grid": false},
      "axisYQuantitative": {
        "gridColor": "#676A86",
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "tickCount": 4,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      },
      "title": {
        "font": "Montserrat, sans-serif",
        "fontSize": 16,
        "color": "#1a1a1a",
        "subtitleFontSize": 14,
        "subtitleColor": "#676A86"
      }
    }
  }