{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Housing supply and change in rent.",
    "data": {
      "url": "https://raw.githubusercontent.com/gmelmed/gmelmed.github.io/refs/heads/main/final_project/homebuilding_zori.csv"
    },
    "transform": [
      {
        "filter": "datum.date == '2024-09-01'"
      }
    ],
    "mark": {
      "type": "point",
      "filled": true,
      "tooltip": true,
      "color":"#002FA7"
    },
    "encoding": {
      "x": {
        "field": "multi_total_ytd_per_capita",
        "type": "quantitative",
        "axis": {
          "grid": false,
          "title":"New multi-unit housing per 10k people (ytd)"
        }
      },
      "y": {
        "field": "zori_yoy",
        "type": "quantitative",
        "axis": {
          "format": "%",
          "title":"Change in rent index (yoy)"
        }
      },
      "size": {
        "field": "pop_2023",
        "type": "quantitative",
        "scale": {
          "type": "linear",
          "range": [50, 1000] 
        },
        "legend":{
          "title":"Population"
        }
      },
      "opacity": {
        "condition": {
          "selection": "hover",
          "value": 1
        },
        "value": 0.6
      },
      "tooltip": [
        {
          "field": "name",
          "title": "Metro"
        },
        {
          "field": "zori_yoy",
          "title": "% change in rent index",
          "format": ".2%"
        },
        {
          "field": "multi_total_ytd_per_capita",
          "title": "Multi-units authorized per 10k (ytd)",
          "format": ".2f"
        },
        {
          "field": "pop_2023",
          "title": "Population",
          "format":".2~s"
        }
      ]
    },
    "selection": {
      "hover": {
        "type": "single",
        "on": "mouseover",
        "empty": "none",
        "encodings": ["x", "y"]
      }
    },
    "config": {
      "font": "Gotham",
      "view": {
        "stroke": "transparent"
      },
      "range": {
        "category": [
          "#F4C245",
          "#002FA7",
          "#E6224B",
          "#36B7B4",
          "#00A767",
          "#179FDB",
          "#EB5C2E"
        ]
      },
      "point": {
        "filled": true,
        "opacity": 0.7
      },
      "axis": {
        "labelColor": "#676A86",
        "labelFontSize": 11,
        "labelFont": "Gotham",
        "labelOpacity": 0.7,
        "tickColor": "#676A86",
        "tickOpacity": 0.5,
        "domainColor": "#676A86",
        "domainOpacity": 0.5,
        "gridColor": "#676A86",
        "gridDash": [2, 2],
        "gridOpacity": 0.5,
        "title": null,
        "titleColor": "#676A86",
        "titleOpacity": 0.8,
        "tickSize": 4
      },
      "axisXDiscrete": {
        "grid": false,
        "labelAngle": 0,
        "tickCount": 10,
        "tickOpacity": 0.5,
        "title": null
      },
      "axisYDiscrete": {
        "ticks": false,
        "labelPadding": 5
      },
      "axisXQuantitative": {
        "grid": true
      },
      "axisYQuantitative": {
        "gridColor": "#676A86",
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "tickCount": 8,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      },
      "legend": {
        "titleFont": "Gotham",
        "titleFontSize": 14,
        "titleColor": "#122b39",
        "title": null,
        "labelColor": "#122b39",
        "labelFontSize": 12
      },
      "title": {
        "font": "Gotham",
        "fontSize": 16,
        "subtitleFontSize": 14,
        "subtitleColor": "#676A86"
      }
    },
    "height": 400,
    "width": 600,
    "title": {
      "text": "New multi-unit housing and change in rent, September 2024",
      "subtitle": [
        "Rent data from Zillow. New construction and population data from US Census Bureau.",
        ""
      ],
      "anchor": "start"
    }
  }
  