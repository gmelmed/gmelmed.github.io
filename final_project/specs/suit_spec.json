{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
      "font": "Montserrat, sans-serif",
      "view": {"stroke": "transparent"},
      "background": "#f7f7f7",
      "range": {"category": {"scheme": "observable10"}},
      "point": {"filled": true, "opacity": 0.95},
      "axis": {
        "labelColor": "#676A86",
        "labelFontSize": 11,
        "labelFont": "Montserrat, sans-serif",
        "labelOpacity": 0.7,
        "tickColor": "#676A86",
        "tickOpacity": 0.5,
        "domainColor": "#676A86",
        "domainOpacity": 0.5,
        "gridColor": "#676A86",
        "gridDash": [2, 2],
        "gridOpacity": 0.5,
        "title": null,
        "titleColor": "#676A86",
        "titleOpacity": 0.8,
        "tickSize": 4
      },
      "axisXTemporal": {"grid": false},
      "axisYQuantitative": {
        "gridColor": "#676A86",
        "gridDash": [1, 5],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "tickCount": 8,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      },
      "legend": {
        "titleFont": "Montserrat, sans-serif",
        "titleFontSize": 14,
        "titleColor": "#1a1a1a",
        "title": null,
        "labelColor": "#1a1a1a",
        "labelFontSize": 12
      },
      "title": {
        "font": "Montserrat, sans-serif",
        "fontSize": 16,
        "color": "#1a1a1a",
        "subtitleFontSize": 14,
        "subtitleColor": "#676A86"
      }
    },
    "title": {
      "text": "The price of a suit",
      "subtitle": [
        "Average price of suit components in the UK.",
        "Data from Richard Davies' UK prices database.",
        ""
      ],
      "anchor": "start"
    },
    "height": 400,
    "width": 600,
    "data": {"url": "https://raw.githubusercontent.com/gmelmed/gmelmed.github.io/refs/heads/main/data/suit_avg.csv"},
    "mark": "area",
    "encoding": {
      "x": {
        "type": "temporal",
        "timeUnit": "yearmonth",
        "field": "quote_date",
        "axis": {"format": "%Y"}
      },
      "y": {
        "aggregate": "sum", "field": "price"
      },
      "color": {
        "field": "description"
      },
      "tooltip":[
        {
          "type": "temporal",
          "field": "quote_date",
          "timeUnit":"yearmonth",
          "title":"Month"
        },
        {
          "type": "nominal",
          "field": "description",
          "title": "Item"
        }
      ]
    }
  }
  