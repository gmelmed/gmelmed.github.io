{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Housing supply and change in rent.",
    "data": {
      "url": "https://raw.githubusercontent.com/gmelmed/gmelmed.github.io/refs/heads/main/final_project/data/homebuilding_zori_indexed.csv"
    },
    "transform": [
      {"filter": "toDate(datum.date) >= toDate('2019-12-01')"},
      {"filter": "datum.zori != 0"}
    ],
    "layer": [
      {
        "mark": {
          "type": "line",
          "color":"lightgrey",
          "opacity": 0.3
          },
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal",
            "axis": {"title": "", "grid": false}
          },
          "y": {
            "field": "running_total_per_10k",
            "type": "quantitative",
            "axis": {
              "title": "Multi-unit housing structures approved",
              "format": ".0f"
              }
          },
          "detail":{
                "field":"name"
              },
          "tooltip": [
            {
              "field": "name",
              "type": "nominal",
              "title": "Metro"
            },
            {
              "field": "date",
              "type": "temporal",
              "title": "Month",
              "format": "%B %Y"
            },
            {
              "field": "running_total_per_10k",
              "type": "quantitative",
              "title": "New stuctures since 2020",
              "format": ".0f"
            }
          ]
        }
      },
      {
        "transform": [
          {"filter":"datum.state == 'TX' || datum.state == 'CA'"}
        ],
        "mark": {
          "type": "line",
          "strokeWidth": 2.5
          },
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal",
            "axis": {"title": "", "grid": false}
          },
          "y": {
            "field": "running_total_per_10k",
            "type": "quantitative",
            "axis": {
              "title": "New stuctures since 2020",
              "format": ".0f"
              }
  
          },
          "color":{
            "field":"state"
          },
          "detail":{
            "field": "name"
          },
          "tooltip": [
            {
              "field": "name",
              "type": "nominal",
              "title": "Metro"
            },
            {
              "field": "date",
              "type": "temporal",
              "title": "Month",
              "format": "%B %Y"
            },
            {
              "field": "running_total_per_10k",
              "type": "quantitative",
              "title": "Multi-unit housing structures approved",
              "format": ".0f"
            }
          ]
        }
      }
    ],
    "config": {
      "font": "Montserrat, sans-serif",
      "view": {
        "stroke": "transparent"
      },
      "background": "#f7f7f7",
      "range": {
        "category": {
          "scheme": "observable10"
        }
      },
      "point": {
        "filled": true,
        "size": 80,
        "color": "#4269d0",
        "opacity": 0.95
      },
      "area": {
        "color": "#4269d0"
      },
      "line": {
        "color": "#4269d0"
      },
      "bar": {
        "color": "#4269d0"
      },
      "circle": {
        "color": "#4269d0"
      },
      "rule": {
        "color": "#4269d0"
      },
      "axis": {
        "labelColor": "#676A86",
        "labelFontSize": 11,
        "labelFont": "Montserrat, sans-serif",
        "labelOpacity": 0.7,
        "tickColor": "#676A86",
        "tickOpacity": 0.5,
        "domainColor": "#676A86",
        "domainOpacity": 0.5,
        "gridColor": "#676A86",
        "gridDash": [
          2,
          2
        ],
        "gridOpacity": 0.5,
        "title": null,
        "titleColor": "#676A86",
        "titleOpacity": 0.8,
        "tickSize": 4
      },
      "axisXTemporal": {
        "grid": false
      },
      "axisYQuantitative": {
        "gridColor": "#676A86",
        "gridDash": [
          1,
          5
        ],
        "gridOpacity": 0.5,
        "ticks": false,
        "labelPadding": 5,
        "tickCount": 8,
        "titleAngle": 0,
        "titleAlign": "left",
        "titleBaseline": "bottom",
        "titleX": 0,
        "titleY": -5
      },
      "legend": {
        "titleFont": "Montserrat, sans-serif",
        "titleFontSize": 14,
        "titleColor": "#1a1a1a",
        "title": null,
        "labelColor": "#1a1a1a",
        "labelFontSize": 12
      },
      "title": {
        "font": "Montserrat, sans-serif",
        "fontSize": 16,
        "color": "#1a1a1a",
        "subtitleFontSize": 14,
        "subtitleColor": "#676A86"
      }
    },
    "height": 400,
    "width": 600,
    "title": {
      "text": "Minneapolis has seen far milder rent inflation since the pandemic",
      "subtitle": ["Data from Zillow's Observed Rent Index (ZORI).", ""],
      "anchor": "start"
    }
  }