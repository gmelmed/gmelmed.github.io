{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Housing supply and change in rent.",
  "data": {
    "url": "https://raw.githubusercontent.com/gmelmed/gmelmed.github.io/refs/heads/main/final_project/data/homebuilding_zori_indexed.csv"
  },
  "transform": [
    {"filter": "toDate(datum.date) >= toDate('2019-12-01')"},
    {"filter": "datum.region == 'Southeast'"}
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "color": "lightgrey",
        "opacity": 0.3
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": {"title": "", "grid": false}
        },
        "y": {
          "field": "running_total_per_10k",
          "type": "quantitative",
          "axis": {
            "title": "New multi-unit stuctures per 10k",
            "format": "~s"
          }
        },
        "detail": {
          "field": "name"
        },
        "tooltip": [
          {
            "field": "name",
            "type": "nominal",
            "title": "Metro"
          },
          {
            "field": "date",
            "type": "temporal",
            "title": "Month",
            "format": "%B %Y"
          },
          {
            "field": "running_total_per_10k",
            "type": "quantitative",
            "title": "New stuctures per 10k",
            "format": ".0f"
          }
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum.state == 'FL'"},
        {
          "pivot": "name",
          "value": "running_total_per_10k",
          "groupby": ["date"]
        }
      ],
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": {"title": "", "grid": false}
        }
      },
      "layer": [
        {
          "transform": [
            {
              "fold": ["Orlando", "Jacksonville", "Miami", "Tampa"],
              "as": ["name", "running_total_per_10k"]
            }
          ],
          "mark": {"type": "line", "strokeWidth": 3},
          "encoding": {
            "y": {
              "field": "running_total_per_10k",
              "type": "quantitative",
              "axis": {
                "title": "New multi-unit stuctures per 10k",
                "format": ".0f"
              }
            },
            "color": {
              "field": "name",
              "scale": {
                "domain": ["Orlando", "Jacksonville", "Miami", "Tampa"]
              },
              "legend":{
                "orient": "top"}
            }
          }
        },
        {
          "transform": [
            {
              "fold": ["Orlando", "Jacksonville", "Miami", "Tampa"],
              "as": ["name", "running_total_per_10k"]
            },
            {"filter": {"param": "hover", "empty": false}}
          ],
          "mark": {"type": "point", "size": 100},
          "encoding": {
            "y": {"field": "running_total_per_10k", "type": "quantitative"},
            "color": {
              "field": "name",
              "scale": {
                "domain": ["Orlando", "Jacksonville", "Miami", "Tampa"]
              }
            }
          }
        },
        {
          "mark": "rule",
          "encoding": {
            "opacity": {
              "condition": {"value": 0.3, "param": "hover", "empty": false},
              "value": 0
            },
            "tooltip": [
              {
                "field": "date",
                "type": "temporal",
                "title": "Month",
                "format": "%B %Y"
              },
              {
                "field": "Orlando",
                "type": "quantitative",
                "title": "Orlando",
                "format": ".1f"
              },
              {
                "field": "Jacksonville",
                "type": "quantitative",
                "title": "Jacksonville",
                "format": ".1f"
              },
              {
                "field": "Miami",
                "type": "quantitative",
                "title": "Miami",
                "format": ".1f"
              },
              {
                "field": "Tampa",
                "type": "quantitative",
                "title": "Tampa",
                "format": ".1f"
              }
            ]
          },
          "params": [
            {
              "name": "hover",
              "select": {
                "type": "point",
                "fields": ["date"],
                "nearest": true,
                "on": "pointerover",
                "clear": "pointerout"
              }
            }
          ]
        }
      ]
    }
  ],
  "config": {
    "font": "Montserrat, sans-serif",
    "view": {"stroke": "transparent"},
    "background": "#f7f7f7",
    "range": {"category": {"scheme": "observable10"}},
    "point": {"filled": true, "opacity": 0.95},
    "axis": {
      "labelColor": "#676A86",
      "labelFontSize": 11,
      "labelFont": "Montserrat, sans-serif",
      "labelOpacity": 0.7,
      "tickColor": "#676A86",
      "tickOpacity": 0.5,
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [2, 2],
      "gridOpacity": 0.5,
      "title": null,
      "titleColor": "#676A86",
      "titleOpacity": 0.8,
      "tickSize": 4
    },
    "axisXTemporal": {"grid": false},
    "axisYQuantitative": {
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "ticks": false,
      "labelPadding": 5,
      "tickCount": 8,
      "titleAngle": 0,
      "titleAlign": "left",
      "titleBaseline": "bottom",
      "titleX": 0,
      "titleY": -5
    },
    "legend": {
      "titleFont": "Montserrat, sans-serif",
      "titleFontSize": 14,
      "titleColor": "#1a1a1a",
      "title": null,
      "labelColor": "#1a1a1a",
      "labelFontSize": 12
    },
    "title": {
      "font": "Montserrat, sans-serif",
      "fontSize": 16,
      "color": "#1a1a1a",
      "subtitleFontSize": 14,
      "subtitleColor": "#676A86"
    }
  },
  "height": 400,
  "width": 300,
  "title": {
    "text": "Homebuilding in Florida",
    "subtitle": [
      "Multi-unit housing structures approved per capita.",
      "Other southeast metros shown in grey.",
      "Homebuilding and population data from US Census.",
      ""
    ],
    "anchor": "start"
  }
}